<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
     <include
        android:id="@+id/toolbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"/>
    <Button
        android:id="@+id/btnDown"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:text="@string/s_next"
        android:layout_below="@+id/toolbarlayout"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonStyleSmall"/>
    <Button
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/s_previous"
        android:layout_toLeftOf="@+id/btnDown"
        android:layout_below="@+id/toolbarlayout"
        style="?android:attr/buttonStyleSmall"/>
    <TextView
        android:id="@+id/labelTableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/btnUp"
        android:layout_below="@+id/toolbarlayout"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_table_list"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:itemBackground="@android:color/white"/>
    <com.rcdev.sqlitebrowser.utils.GridView
        android:id="@+id/grid"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/bottomSheet"
        android:layout_below="@+id/labelTableName"/>
    <com.rcdev.sqlitebrowser.utils.GridView
        android:id="@+id/gridFields"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomSheet"
        android:layout_below="@+id/labelTableName"/>
</RelativeLayout>
