<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rcdev.sqlitebrowser">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/s_elegir_db" android:name=".views.FileList"/>
        <activity android:label="@string/app_name" android:name=".views.DatabaseList"/>
        <activity android:label="@string/app_name" android:name=".views.TableList"/>
        <activity android:label="@string/s_query" android:name=".views.QueryResult"/>
        <activity android:label="@string/s_create_table" android:name=".views.CreateTable"/>
        <activity android:label="@string/s_create_db" android:name=".views.NewDataBase"/>

    </application>

</manifest>